# For options see: http://tiswww.case.edu/php/chet/readline/rltop.html
# To reload this file after changes:
# Ctrl-X Ctrl-R
set completion-ignore-case off
set show-all-if-ambiguous on
set input-meta on
set output-meta on

#"\t": menu-complete

# none, visible or audible
set bell-style none

# for linux console
"\e[1~": beginning-of-line
"\e[4~": end-of-line
"\e[5~": beginning-of-history
"\e[6~": end-of-history
"\e[3~": delete-char
"\e[2~": quoted-insert

# word jump on SHIFT left/right arrows
"\e[0;2D": backward-word
"\e[1;2C": forward-word


# ctrl left/right
"\e[1;5D": backward-word
"\e[1;5C": forward-word
